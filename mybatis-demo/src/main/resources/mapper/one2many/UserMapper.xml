<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.test.one2many.mapper.UserMapper">

  <resultMap id="userMap" type="com.mybatis.test.one2many.entity.User">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="age" column="age"/>
    <result property="birthday" column="birthday"/>
  </resultMap>

  <resultMap id="userWithDepartmentMap" extends="userMap" type="com.mybatis.test.one2many.entity.User">
    <association property="department" javaType="com.mybatis.test.one2many.entity.Department" columnPrefix="department_">
      <!-- column配置数据库查询列名称，这里的 数据库列名称=column+columnPrefix -->
      <id property="id" column="id"/>
      <result property="name" column="name"/>
    </association>
  </resultMap>

  <resultMap id="userWithDepartmentMap2" extends="userMap" type="com.mybatis.test.one2many.entity.User">
    <association property="department" fetchType="lazy"  column="department_id" select="com.mybatis.test.one2many.mapper.DepartmentMapper.queryById" />
  </resultMap>


  <select id="findAll" resultMap="userWithDepartmentMap">
    select usr.*, dep.name as department_name
    from tbl_user usr
           left join tbl_department dep on usr.department_id = dep.id
  </select>

  <select id="findAll2" resultMap="userWithDepartmentMap2">
    select
      *
    from tbl_user
  </select>

  <!-- 新增根据部门ID查询该部门下所有员工 -->
  <select id="findAllByDepartmentId" parameterType="string" resultType="com.mybatis.test.one2many.entity.User">
    select * from tbl_user where department_id = #{departmentId}
  </select>


</mapper>
